<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.webcomponents.layout.converters">

  <extension target="org.nuxeo.ecm.platform.forms.layout.LayoutStore"
    point="widgetConverters">

    <widgetConverter name="jsfToWebComponents" order="10">
      <categories>
        <category>webcomponents</category>
      </categories>
      <converter-class>
        org.nuxeo.ecm.platform.webcomponents.layout.converters.JSFToWebComponentsConverter
      </converter-class>
    </widgetConverter>

    <widgetConverter name="webcListingFieldConverter" order="20">
      <categories>
        <category>webcomponents</category>
        <category>webcomponents_instances</category>
      </categories>
      <converter-class>
        org.nuxeo.ecm.platform.webcomponents.layout.converters.JSFListingWidgetConverter
      </converter-class>
    </widgetConverter>

    <widgetConverter name="webcDirectoryConverter" order="20">
      <categories>
        <category>webcomponents</category>
        <category>webcomponents_instances</category>
      </categories>
      <converter-class>
        org.nuxeo.ecm.platform.forms.layout.io.plugins.WidgetDirectoryItemsConverter
      </converter-class>
    </widgetConverter>

  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.LayoutStore"
    point="layoutConverters">

    <layoutConverter name="jsfToWebComponents" order="10">
      <categories>
        <category>webcomponents</category>
      </categories>
      <converter-class>
        org.nuxeo.ecm.platform.webcomponents.layout.converters.JSFToWebComponentsConverter
      </converter-class>
    </layoutConverter>

  </extension>

</component>
